<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dimas.helloworlddyr.ResultActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_uangAnda"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Uang anda"
        android:gravity="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_hadiah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Rp. 1.000.000,-"
        android:layout_marginTop="50dp"/>


    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Lagi?"
        android:textSize="18dp"
        android:onClick="mulaiPermainan"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu Awal"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:onClick="backToHome"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_keluar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:onClick="keluarPermainan"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:layout_marginTop="10dp" />
</LinearLayout>
