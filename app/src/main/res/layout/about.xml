<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Tentang Game"
        android:layout_marginTop="30dp"
        android:textSize="20sp" />

<ScrollView
        android:id="@+id/frame_permainan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_tentanggame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="Who Wants to be a Millionaire adalah sebuah kuis yang menawarkan hadiah uang tunai dalam jumlah besar untuk peserta yang bisa menjawab soal  pilihan ganda yang mengasah otak."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_bantuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Bantuan  :"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_fifty2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:text="50:50 (Fifty-fifty) atau 1:1, komputer akan menghilangkan dua pilihan yang salah."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_callafren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="40dp"
        android:text="Phone a Friend, menelepon seseorang untuk bertanya selama 30 detik."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_askaudience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:text="Ask the Audience, meminta suara penonton dan kemudian hasilnya disajikan dalam bentuk grafik."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_tentangpembuatgame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="Game ini dibuat oleh  :"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/tv_LILIK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Lilik Asih I      (15051204005)."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_fanny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Fanny Ratna S     (15051204009)."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_audy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Audy Yanuar R     (15051204026)."
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_dimas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Dimas Yoan R      (15051204030)."
        android:textSize="20sp" />


</ScrollView>
</LinearLayout>
